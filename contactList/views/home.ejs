<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/contactList/assets/css/home.css">
    <script src="https://kit.fontawesome.com/40d9bec4e1.js" crossorigin="anonymous"></script>

</head>
<body>
    <!-- <h1>Rendered from EJS View!</h1> -->
    <h1 id="page-heading">    <i class="fa-solid fa-address-book"></i>
        Contact List</h1>

    <div id="socio">
        <ul >
            <% for(let i of contact_list){%>
                <li class="contact">
                   <div class="details">
                        <p><%= i.name %></p>
                        <p><%= i.phone %></p>
                    </div>
              
                    <div class="delete-btn">
                        <!-- <a href="/delete-contact/<%= i.phone %>"> String param-->
                         <!-- <a href="/delete-contact/?phone=<%= i.phone %>&name=<%= i.name %>"        query params          -->
                            <!-- <a href="/delete-contact/?phone=<%= i.phone %>">  -->         
                                <a href="/delete-contact/?id=<%= i._id %>">
                               <i class="fa-solid fa-square-xmark"></i>
                            </a>
                    </div>
                </li> 
            <%}%>
        </ul>
    </div>

    <form id="mrx" action="/create-contact" method="POST">
        <input type="text" name="name" placeholder="Enter Name">
        <input type="number" name="phone" placeholder="Enter Phone">
        <button type="submit">Add contact</button>
    </form>
<script type="text/javscript" src="/js/home.js"></script>
</body>
</html>